// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  nickname  String
  phone     String?
  role      String    @default("USER") // USER, ADMIN
  status    String    @default("ACTIVE")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  reviews   Review[]
  payments  Payment[]
}

model Review {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  serviceType String   // 이사청소, 거주청소, 아기맞이청소, 무지개청소, 상가청소
  rating      Int
  title       String
  content     String
  photos      String?  // JSON string or comma-separated URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Estimate {
  id            Int      @id @default(autoincrement())
  customerName  String
  phone         String
  email         String?
  serviceType   String
  address       String
  area          Int
  petType       String
  petCount      Int
  preferredDate DateTime?
  message       String?
  photos        String?  // JSON string or comma-separated URLs
  status        String   @default("PENDING") // PENDING, CONSULTING, FIXED, COMPLETED
  adminMemo     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Payment {
  id           Int      @id @default(autoincrement())
  orderId      String   @unique
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  amount       Int
  serviceType  String
  paymentKey   String?
  method       String?
  status       String   @default("READY") // READY, IN_PROGRESS, DONE, CANCELED
  tossResponse String?  // JSON string
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
